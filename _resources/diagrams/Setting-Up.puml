@startuml "setting-up"
!include _resources/diagrams/plantuml_styles.puml
title Setting up PMM\nOverview\n
start
partition "1. Set up PMM Server" {
	split
		:a) Docker;
	split again
		:b) Virtual Appliance;
	split again
		:c) Amazon AWS;
	end split
}
repeat
partition "2. Set up PMM Client" {
	split
		:a) Linux;
	split again
		:b) Docker;
	end split
}
:3. Configure service;
:4. Add service;
repeat while (Add more?) is (Yes)
-> Done;
stop
@enduml
