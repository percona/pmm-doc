@startuml "setting-up_client_postgresql"
!include _resources/diagrams/plantuml_styles.puml
'title "Setting up PMM Client to monitor a PostgreSQL host\nOverview\n"
legend bottom left
Legend
<#cce6ff>| Required |
<#lightgrey>| Optional |
endlegend

#lightgrey:Create a database account for PMM;
partition "Choose and configure\nan extension" {
	split
		-> ""pg_stat_statements"";
		:Install ""postgresql-contrib"";
		:Configure;
	split again
		-> ""ps_stat_monitor"";
		split
			-> Percona distribution;
			:Linux package manager;
		split again
			-> PostgreSQL;
			:Source code;
		end split
		:Configure;
	end split
}
partition "Add a service " {
	split
	-> With user interface;
		:PMM <&arrow-thick-right>\nPMM Add Instance <&arrow-thick-right>\nMySQL -\nAdd a remote instance;
	split again
	-> On command line;
		split
			-> Slow query log;
			:<code>
			pmm-admin add mysql
			--query-source=slowlog
			--size-slow-logs=N
			...
			</code>;
		split again
			-> Performance Schema;
			:<code>
			pmm-admin add mysql
			--query-source=perfschema
			...
			</code>;
		end split
	end split
}
#lightgrey:Check the service;
@enduml
